<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    tools:context=".Views.UploadMedia">


    <ImageView
        android:id="@+id/imagen"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/titulo"
        android:layout_width="364dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:maxLength="20"
        android:backgroundTint="#F6F6F6"
        android:ems="10"
        android:hint="Titulo..."
        android:inputType="textPersonName"
        android:textColor="#F6F6F6"
        android:textColorHint="#F6F6F6"
        app:layout_constraintBottom_toTopOf="@+id/descripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/descripcion"
        android:layout_width="367dp"
        android:layout_height="56dp"
        android:layout_marginBottom="220dp"
        android:backgroundTint="#F6F6F6"
        android:ems="10"
        android:hint="Escribe un pie de foto..."
        android:inputType="textPersonName"
        android:textColor="#F6F6F6"
        android:textColorHint="#F6F6F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSubir"
        android:layout_width="147dp"
        android:layout_height="43dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Publicar"
        android:background="#00A4D3"
        android:textColor="#FDFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnInicio"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:layout_weight="4"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/btnSubir"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>